@page
@model ChatModel
@{
    ViewData["Title"] = "Chat";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Optional: Customize Tailwind Theme -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3B82F6', // Tailwind blue-500
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-white text-gray-800">
    <div class="flex h-screen">
        <!-- Sidebar: Personal Chats -->
        <aside class="w-72 border-r border-gray-200 p-4 overflow-y-auto">
            <h2 class="text-lg font-semibold mb-4">Personal Chats</h2>
            <div class="space-y-2">
                <div class="p-3 rounded-lg bg-blue-100 hover:bg-blue-200 cursor-pointer">
                    <div class="font-medium">Developer1</div>
                    <div class="text-xs text-gray-500">3/18/2025 04:50 PM</div>
                </div>
                <div class="p-3 rounded-lg hover:bg-gray-100 cursor-pointer">
                    <div class="font-medium">Finance</div>
                    <div class="text-xs text-gray-500">3/3/2025 07:13 PM</div>
                </div>
            </div>
        </aside>

        <!-- Chat Area -->
        <main class="flex-1 flex flex-col">
            <!-- Header -->
            <div class="border-b border-gray-200 p-4">
                <h3 class="text-lg font-semibold">Developer1</h3>
            </div>

            <!-- Messages -->
            <div class="flex-1 p-4 overflow-y-auto space-y-2">
                <!-- Incoming -->
                <div class="bg-gray-100 p-2 rounded-lg max-w-xs">Hi</div>
                <div class="bg-gray-100 p-2 rounded-lg max-w-xs">U good</div>

                <!-- Outgoing -->
                <div class="flex justify-end">
                    <div class="bg-blue-500 text-white p-2 rounded-lg max-w-xs">hi</div>
                </div>
                <div class="flex justify-end">
                    <div class="bg-blue-500 text-white p-2 rounded-lg max-w-xs">d asd</div>
                </div>
                <div class="flex justify-end">
                    <div class="bg-blue-500 text-white p-2 rounded-lg max-w-xs">hi tehre</div>
                </div>
                <div class="flex justify-end">
                    <div class="bg-blue-500 text-white p-2 rounded-lg max-w-xs">i am lek</div>
                </div>
            </div>

            <!-- Message Input -->
            <div class="border-t border-gray-200 p-4 flex items-center">
                <input type="text" class="flex-1 border border-gray-300 rounded-lg px-4 py-2" placeholder="Type your message..." />
                <button class="ml-2 bg-blue-500 text-white px-4 py-2 rounded-lg">Send</button>
            </div>
        </main>
    </div>
</body>
</html>
